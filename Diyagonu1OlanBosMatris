using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SparseMatrix
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Bir sayı giriniz : ");
            int sınır = Convert.ToInt32(Console.ReadLine());//Kare matrisin kaça kaç olduğunu öğreniyoruz.

            for (int i = 0; i < sınır; i++)
            {
                for (int j = 0; j < sınır; j++)
                {
                    if(i == j)                    
                    {
                        Console.Write("1");
                    }
                    else
                    {
                        Console.Write("0");
                    }
               }
                Console.WriteLine("");//Alt satıra geçiyoruz
            }
            Console.ReadKey();
        }
    }
}
