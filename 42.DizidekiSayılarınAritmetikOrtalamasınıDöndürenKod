public class dasdasdas {
    
    public static void main(String[] args) {
    int[] array=new int[10];
    for(int i=0;i<array.length;i++){
        array[i]=(int)(Math.random()*101);
    }
    int toplam=0;  
    double ortalama;
    for(int i=0;i<array.length;i++){
        toplam+=array[i];        
    }
    ortalama=(double)toplam/array.length;
        System.out.println("Dizideki elemanların sayısı:"+array.length);
        System.out.println("Dizideki elemanların toplamı:"+toplam);
        System.out.println("Dizideki elemanların ortalaması:"+ortalama);
    }
    }
